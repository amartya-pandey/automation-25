# Environment variables for Auto-Certy
# Copy this file to .env and fill in your values

# Email Configuration
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Directories
UPLOAD_DIR=../uploads
CERTIFICATE_DIR=../generated_certificates

# Default Email Template
DEFAULT_EMAIL_SUBJECT=Your Certificate
DEFAULT_EMAIL_BODY=Dear {name},\n\nCongratulations! Please find your certificate for {branch} ({year_of_study}) attached.\n\nBest regards,\nCertificate Team
